<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.LoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <ImageView
                android:id="@+id/iconImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/icon_332x332"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="Entrez votre adresse email"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Email Input (visible first) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:hint="Email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PIN Input (hidden initially) -->
            <LinearLayout
                android:id="@+id/pinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/pinDot1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/pin_dot_empty" />

                    <View
                        android:id="@+id/pinDot2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/pin_dot_empty" />

                    <View
                        android:id="@+id/pinDot3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/pin_dot_empty" />

                    <View
                        android:id="@+id/pinDot4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/pin_dot_empty" />
                </LinearLayout>

                <!-- Bouton d'authentification biomÃ©trique -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBiometric"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:text="Utiliser l'empreinte digitale"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:icon="@drawable/ic_notification" />

                <!-- PIN Keypad -->
                <include
                    android:id="@+id/pinKeypad"
                    layout="@layout/pin_keypad" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Continuer"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pas de compte ? S'inscrire"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TextButton" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>